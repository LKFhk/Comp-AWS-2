# RiskIntel360 Platform Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Authentication Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OAuth 2.0 / Cognito Configuration
OAUTH_CLIENT_ID=your-cognito-client-id
OAUTH_CLIENT_SECRET=your-cognito-client-secret
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback
OAUTH_REGION=us-east-1

# Cognito Configuration
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_USER_POOL_CLIENT_ID=your-client-id
COGNITO_REGION=us-east-1

# Database Configuration
DYNAMODB_TABLE_PREFIX=riskintel360
AURORA_CLUSTER_NAME=riskintel360-cluster
AURORA_DATABASE_NAME=riskintel360
AURORA_USERNAME=riskintel360_user
AURORA_PASSWORD=your-aurora-password

# Redis Configuration
REDIS_CLUSTER_NAME=riskintel360-redis
REDIS_PORT=6379
REDIS_TTL_SECONDS=3600

# Fintech Public Data API Keys (Free Tier)
