CUSTOM_METRICS_ENABLED=true

# Agent Configuration
MAX_CONCURRENT_AGENTS=50
MIN_CONCURRENT_AGENTS=3
AGENT_TIMEOUT_SECONDS=300
WORKFLOW_TIMEOUT_SECONDS=7200
MEMORY_RETENTION_DAYS=30
MAX_MEMORY_SIZE_MB=100

# Fintech Agent Configuration
REGULATORY_COMPLIANCE_AGENT_ENABLED=true
FRAUD_DETECTION_AGENT_ENABLED=true
MARKET_ANALYSIS_AGENT_ENABLED=true
KYC_VERIFICATION_AGENT_ENABLED=true
RISK_ASSESSMENT_AGENT_ENABLED=true

# ML Configuration for Fraud Detection
ML_MODEL_PATH=./models
FRAUD_DETECTION_THRESHOLD=0.8
ML_BATCH_SIZE=1000
ML_INFERENCE_TIMEOUT=30
UNSUPERVISED_ML_ENABLED=true
ML_MODEL_RETRAIN_INTERVAL_HOURS=24

# Bedrock Configuration for Fintech
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_REGULATORY=anthropic.claude-3-haiku-20240307-v1:0
