# Development Environment Configuration for RiskIntel360 Platform
# This file contains development-specific overrides

# Environment
ENVIRONMENT=development
DEBUG=true
APP_NAME=RiskIntel360 Platform (Development)
APP_VERSION=0.1.0-dev

# Database Configuration (Local Docker)
DATABASE_URL=postgresql://riskintel360_user:riskintel360_password@postgres:5432/riskintel360
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=riskintel360
POSTGRES_USER=riskintel360_user
POSTGRES_PASSWORD=riskintel360_password

# Redis Configuration (Local Docker)
REDIS_URL=redis://:riskintel360_redis_password@redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=riskintel360_redis_password
REDIS_DB=0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true
API_WORKERS=1

# Development-specific settings
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
PYTHONPATH=/app

# Hot-reload settings
WATCHDOG_ENABLED=true
RELOAD_DIRS=/app/riskintel360
RELOAD_INCLUDES=*.py,*.yaml,*.yml,*.json

# Logging Configuration (Development)
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_REQUESTS=true
LOG_RESPONSES=true
STRUCTURED_LOGGING=false

# Development Tools
ENABLE_PROFILER=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://localhost:5173"]

# Mock External APIs for Development
USE_MOCK_APIS=true
MOCK_BEDROCK=false  # Set to true to use mock responses instead of real Bedrock calls
MOCK_EXTERNAL_DATA=true  # Use mock data for external APIs when keys not provided

# Development Database Settings
DB_ECHO=true  # Echo SQL queries to console
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Development Redis Settings
REDIS_DECODE_RESPONSES=true
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECTION_POOL_MAX_CONNECTIONS=10

# Security (Development - NOT for production)
JWT_SECRET_KEY=dev-secret-key-change-in-production
ENCRYPTION_KEY=dev-encryption-key-32-chars-long
DISABLE_AUTH=false  # Set to true to disable authentication for development

# External API Configuration (Optional for development)
# Uncomment and add your API keys for testing with real data
# ALPHA_VANTAGE_API_KEY=your_api_key_here
# NEWS_API_KEY=your_api_key_here
# TWITTER_API_KEY=your_api_key_here
# REDDIT_API_KEY=your_api_key_here

# AWS Configuration (for Bedrock testing)
# AWS_DEFAULT_REGION=us-east-1
# AWS_PROFILE=default
# Uncomment for explicit credentials (not recommended, use AWS CLI or IAM roles)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Configuration
BEDROCK_REGION=us-east-1
MARKET_RESEARCH_MODEL=anthropic.claude-3-haiku-20240307-v1:0
COMPETITIVE_INTEL_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
FINANCIAL_VALIDATION_MODEL=anthropic.claude-3-opus-20240229-v1:0
RISK_ASSESSMENT_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
CUSTOMER_INTEL_MODEL=anthropic.claude-3-haiku-20240307-v1:0
SYNTHESIS_MODEL=anthropic.claude-3-opus-20240229-v1:0

# Agent Configuration (Development)
MAX_CONCURRENT_AGENTS=10  # Lower for development
MIN_CONCURRENT_AGENTS=1
AGENT_TIMEOUT_SECONDS=120  # Shorter timeout for development
WORKFLOW_TIMEOUT_SECONDS=1800  # 30 minutes for development
MEMORY_RETENTION_DAYS=7  # Shorter retention for development
MAX_MEMORY_SIZE_MB=50  # Smaller memory limit for development

# Rate Limiting (Relaxed for development)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
API_RATE_LIMIT_REQUESTS=300
API_RATE_LIMIT_WINDOW=60
API_TIMEOUT_SECONDS=60

# Monitoring (Development)
CLOUDWATCH_ENABLED=false
METRICS_ENABLED=true
CUSTOM_METRICS_ENABLED=false
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# Development Utilities
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_OPENAPI_JSON=true
ENABLE_ADMIN_ENDPOINTS=true

# ML Configuration for Development
ML_MODEL_PATH=./models
FRAUD_DETECTION_THRESHOLD=0.8
ML_BATCH_SIZE=1000
ML_INFERENCE_TIMEOUT=30

# Bedrock Model Configuration for Development
BEDROCK_MODEL_REGULATORY=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_MODEL_FRAUD=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MODEL_RISK=anthropic.claude-3-opus-20240229-v1:0
BEDROCK_MODEL_MARKET=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MODEL_KYC=anthropic.claude-3-haiku-20240307-v1:0

# Testing Configuration
TEST_DATABASE_URL=postgresql://riskintel360_user:riskintel360_password@postgres:5432/riskintel360_test
PYTEST_TIMEOUT=300
COVERAGE_THRESHOLD=80
