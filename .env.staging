# Staging Environment Configuration

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Database Configuration
DATABASE_URL=postgresql://RiskIntel360_user:${POSTGRES_PASSWORD}@postgres:5432/RiskIntel360_staging
POSTGRES_PASSWORD=staging_secure_password_123

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_PASSWORD=staging_redis_password_123

# AWS Configuration (for staging AWS resources)
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_ID=${AWS_ACCOUNT_ID}

# External API Keys (staging/test keys)
ALPHA_VANTAGE_API_KEY=${ALPHA_VANTAGE_API_KEY}
NEWS_API_KEY=${NEWS_API_KEY}
TWITTER_BEARER_TOKEN=${TWITTER_BEARER_TOKEN}

# Security
JWT_SECRET_KEY=staging_jwt_secret_key_very_long_and_secure_123456789
ENCRYPTION_KEY=staging_encryption_key_32_chars_long

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}

# Feature Flags
ENABLE_EXTERNAL_APIS=true
ENABLE_CACHING=true
ENABLE_MONITORING=true
ENABLE_DEBUG_LOGGING=false

# Performance Settings
MAX_CONCURRENT_VALIDATIONS=10
AGENT_TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600

# Notification Settings
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
EMAIL_SMTP_HOST=${EMAIL_SMTP_HOST}
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=${EMAIL_USERNAME}
EMAIL_PASSWORD=${EMAIL_PASSWORD}
