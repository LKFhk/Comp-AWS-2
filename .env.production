# Production Environment Configuration

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Database Configuration (AWS Aurora in production)
DATABASE_URL=${DATABASE_URL}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# Redis Configuration (AWS ElastiCache in production)
REDIS_URL=${REDIS_URL}
REDIS_PASSWORD=${REDIS_PASSWORD}

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_ID=${AWS_ACCOUNT_ID}

# External API Keys (production keys)
ALPHA_VANTAGE_API_KEY=${ALPHA_VANTAGE_API_KEY}
NEWS_API_KEY=${NEWS_API_KEY}
TWITTER_BEARER_TOKEN=${TWITTER_BEARER_TOKEN}
BLOOMBERG_API_KEY=${BLOOMBERG_API_KEY}
CRUNCHBASE_API_KEY=${CRUNCHBASE_API_KEY}

# Security
JWT_SECRET_KEY=${JWT_SECRET_KEY}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
DATADOG_API_KEY=${DATADOG_API_KEY}

# Feature Flags
ENABLE_EXTERNAL_APIS=true
ENABLE_CACHING=true
ENABLE_MONITORING=true
ENABLE_DEBUG_LOGGING=false
ENABLE_RATE_LIMITING=true
ENABLE_CIRCUIT_BREAKER=true

# Performance Settings
MAX_CONCURRENT_VALIDATIONS=50
AGENT_TIMEOUT_SECONDS=600
CACHE_TTL_SECONDS=7200
CONNECTION_POOL_SIZE=20
MAX_OVERFLOW=30

# Notification Settings
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
EMAIL_SMTP_HOST=${EMAIL_SMTP_HOST}
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=${EMAIL_USERNAME}
EMAIL_PASSWORD=${EMAIL_PASSWORD}

# Security Headers
CORS_ORIGINS=${CORS_ORIGINS}
ALLOWED_HOSTS=${ALLOWED_HOSTS}

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/riskintel360.crt
SSL_KEY_PATH=/etc/ssl/private/riskintel360.key

# Backup Configuration
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
BACKUP_RETENTION_DAYS=90

# Fintech Configuration (Production)
BEDROCK_REGION=us-east-1
ML_MODEL_PATH=/app/models
FRAUD_DETECTION_THRESHOLD=0.8
ML_BATCH_SIZE=1000
ML_INFERENCE_TIMEOUT=30

# Bedrock Model Configuration (Production)
BEDROCK_MODEL_REGULATORY=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_MODEL_FRAUD=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MODEL_RISK=anthropic.claude-3-opus-20240229-v1:0
BEDROCK_MODEL_MARKET=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MODEL_KYC=anthropic.claude-3-haiku-20240307-v1:0
